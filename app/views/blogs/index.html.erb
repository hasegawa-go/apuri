<div class="contents row" >
  <% @blogs.each do |blog| %>
    <div class="card white">
    <p class="black-text text-darken-2"><%= blog.text %></p>
     <% if user_signed_in? && current_user.id == blog.user_id %>
        <div class="more">
          <ul class="more_list">
            <li class="waves-effect waves-light btn">
              <%= link_to '編集', "/blogs/#{blog.id}/edit", method: :get %>
            </li>
            <li class="waves-effect waves-light btn">
              <%= link_to '削除', "/blogs/#{blog.id}", method: :delete %>
            </li>
          </ul>
        </div>
      <% end %>
        <%= simple_format(blog.text) %>
      <span class="name">
        <a href="/users/<%= blog.user_id %>">
        </a>
      </span>
    </div>
  <% end %>
</div>
